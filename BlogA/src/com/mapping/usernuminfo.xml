<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.usernuminfoDao">

<insert id="usernuminfoInsert" parameterType="int">
	insert into usernuminfo (userId) values (#{_parameter})
</insert>

<select id="usernuminfoSelect" parameterType="int" resultType="usernuminfo">
	select * from usernuminfo where userId = #{_parameter}
</select>

<update id="weiboNumChange" parameterType="int">
	update usernuminfo set weiboNum = weiboNum + #{1} where userId = #{0}
</update>
</mapper>