<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.commentDao">

<insert id="commentInsert" parameterType="comment">
	insert into comment (commentContent,commentWeiboId,commentUserId) values (#{commentContent},#{commentWeiboId},#{commentUserId})
</insert>

<select id="commentById" parameterType="int" resultType="comment">
	select commentId,commentContent,commentWeiboId,commentUserId,LEFT(commentTime,19) as commentTime from comment where commentWeiboId = #{_parameter} order by commentTime desc
</select>

<delete id="commentDelete" parameterType="int">
	delete from comment where commentId = #{_parameter}
</delete>

<delete id="commentDeleteByWeibo" parameterType="int">
	delete from comment where commentWeiboId = #{_parameter}
</delete>

</mapper>