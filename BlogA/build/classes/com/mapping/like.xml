<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.likeDao">

<insert id="likeInsert" parameterType="like">
	insert into praise (weiboId,userId) values (#{weiboId},#{userId})	
</insert>

<select id="likeNumSelect" parameterType="int" resultType="java.lang.Integer">
	select count(*) from praise where weiboId =#{_parameter}
</select>

<select id="islikeSelect" parameterType="int" resultType="java.lang.Integer">
	select count(*) from praise where weiboId = #{1} and userId = #{2}  
</select>

<delete id="likeDelete" parameterType="like">
	delete from praise where weiboId = #{weiboId} and userId = #{userId}
</delete>
</mapper>