<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias alias="user" type="com.entity.user"/>
		<typeAlias alias="weibo" type="com.entity.weibo"/>
		<typeAlias alias="userinformation" type="com.entity.userinformation"/>
		<typeAlias alias="like" type="com.entity.like"/>
		<typeAlias alias="relation" type="com.entity.relation"/>
		<typeAlias alias="usernuminfo" type="com.entity.usernuminfo"/>
		<typeAlias alias="comment" type="com.entity.comment"/>
		<typeAlias alias="comment2" type="com.entity.comment2"/>
		<typeAlias alias="userseting" type="com.entity.userseting"/>
		<typeAlias alias="weiboimg" type="com.entity.weiboImg"/>
	</typeAliases>

	<environments default="development">
		<environment id="development">
		<transactionManager type="JDBC"/>
		<dataSource type="POOLED">
		<property name="driver" value="com.mysql.jdbc.Driver"/>
		<property name="url" value="jdbc:mysql://127.0.0.1:3306/microblog"/>
		<property name="username" value="root"/>
		<property name="password" value="123456"/>
		</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/mapping/user.xml"/>
		<mapper resource="com/mapping/weibo.xml"/>
		<mapper resource="com/mapping/userinformation.xml"/>
		<mapper resource="com/mapping/comment.xml"/>
		<mapper resource="com/mapping/like.xml"/>
		<mapper resource="com/mapping/relation.xml"/>
		<mapper resource="com/mapping/usernuminfo.xml"/>
		<mapper resource="com/mapping/comment2.xml"/>
		<mapper resource="com/mapping/userseting.xml"/>
		<mapper resource="com/mapping/weiboimg.xml"/>
	</mappers>
</configuration>